<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Use slider to select difficulty"
            android:id="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:id="@+id/textView1" android:layout_gravity="left|center_vertical"/>
    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarLevel" android:indeterminate="false" android:max="100" android:progress="1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:id="@+id/textView2" android:layout_gravity="right|center_vertical"/>
    <Button
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:text="Play!"
            android:id="@+id/buttonPlay" android:layout_gravity="center_horizontal"/>
</LinearLayout>